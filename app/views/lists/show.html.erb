<div class="row justify-content-center mt-3">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Add a movie</h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie %>

          <%= f.button :submit, class: 'btn btn-primary btn-block mt-3' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

