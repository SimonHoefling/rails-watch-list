<div class="banner">
  <%= link_to 'Create new list', new_list_path, class: 'btn btn-success position-absolute top-0 m-5' %>
  <div class="container">
    <h1 class="text-center"> <strong>Movies</strong></h1>
  </div>
</div>


<div class="text-center my-5">
  <h1>MOVIE LISTS</h1>
</div>

<div class="cards m-3">
  <% @lists.each do |list| %>
    <div class="card-category">
      <%= link_to list.name, list_path(list), class: "text-decoration-none text-light"%>
      <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure that you want to delete this category?"} %>
    </div>
  <% end %>
</div>
