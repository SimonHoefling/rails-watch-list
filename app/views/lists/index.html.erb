<div class="text-center my-5">
  <h1>MY LISTS</h1>
  <%= link_to 'Create new list', new_list_path, class: 'btn btn-success' %>
</div>
<div class="container">
  <div class="card-deck card-columns justify-content-center mt-5">
    <% @lists.each do |list| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body text-center">
          <a href="#" class="btn btn-primary btn-block"><%= list.name %></a>
        </div>
      </div>
    <% end %>
  </div>
</div>
